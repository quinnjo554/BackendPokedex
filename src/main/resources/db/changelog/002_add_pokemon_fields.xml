<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="add_pokemon_fields" author="quinn">
        <addColumn tableName="pokemon">
            <column name="types" type="varchar(255)"/>
            <column name="height" type="float"/>
            <column name="weight" type="float"/>
            <column name="abilities" type="varchar(50)"/>
            <column name="egg_groups" type="varchar(50)"/>
            <column name="stats" type="varchar(128)"/>
            <column name="genus" type="varchar(50)"/>
            <column name="description" type="varchar(500)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
